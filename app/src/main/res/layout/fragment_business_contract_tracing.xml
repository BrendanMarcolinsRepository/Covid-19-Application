<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/qrFragement"
    tools:context=".businessUI.ContractTracing.ContactTracing">

    <Button
        android:id="@+id/generateQR"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginBottom="196dp"
        android:backgroundTint="#4C71E3"
        android:fontFamily="@font/open_sans"
        android:text="Generate"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#4C71E3"
        android:textColorHint="#4C71E3"
        android:textColorLink="#4C71E3"
        app:iconTint="#4C71E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrImage"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#4C71E3" />

    <Button
        android:id="@+id/saveQR"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#4C71E3"
        android:fontFamily="@font/open_sans"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateQR" />

    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>