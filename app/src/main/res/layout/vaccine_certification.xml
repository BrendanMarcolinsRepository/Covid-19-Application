<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.vaccinecertification.vaccineCertification">


    <TextView
        android:id="@+id/vacCertText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Vaccine Certificate"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/vacCertYayorNay"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/vacCertText"
        android:src="@drawable/novac"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ausGovPic"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/fakelogo"
        app:layout_constraintTop_toBottomOf="@+id/vacCertYayorNay"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>