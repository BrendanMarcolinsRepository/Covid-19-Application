<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vac.VacInfo">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="409dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Vaccine Information"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="652dp"
        android:background="#81D6E1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <ImageView
            android:id="@+id/ausGovPicHere"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:src="@drawable/coat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Did You Know?"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="281,960"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Australians have received a COVID-19 vaccine."
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="609"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Aged care and residential disability facilities have taken part in the vaccination program."
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="58,358"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="Commonwealth delivered vaccines have been given to people in aged care and disability care."
            android:textAlignment="center" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>